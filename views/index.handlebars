<header>
    <h1>Tech-Blog</h1>
    <nav>
  <ul>
    <li><a href="/">Homepage</a></li>
    <li><a href="/dashboard">Dashboard</a></li>
    {{#if isAuthenticated}}
      <li><a href="/logout">Logout</a></li>
    {{else}}
      <li><a href="/signin">Login</a></li>
      <li><a href="/signup">Sign Up</a></li>
    {{/if}}
  </ul>
</nav>
</header>
<main class="container">
{{#each posts}}
<article>
    <header>
        <h2>{{title}}</h2>
        <p>{{dateCreated}}</p>
        <p>{{creator}}</p>
        <p>{{contents}}</p>
    </header>
    <h5>Comments</h5>
    <div>
        {{#each comments}}
        <p>{{text}}</p>
        <p>{{creator}}</p>
        <p>{{dateCreated}}</p>
        {{/each}}
    </div>
</article>  
{{/each}}
</main>